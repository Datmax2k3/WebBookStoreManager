<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="keywords" content="tailwind,tailwindcss,tailwind css,css,starter template,free template,admin templates, admin template, admin dashboard, free tailwind templates, tailwind example">
    <!-- Css -->
    <link rel="stylesheet" href="~/css/admin-css/styles.css">
    <link rel="stylesheet" href="~/css/admin-css/all.css">
    <link rel="stylesheet" href="~/css/admin-css/sub.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Dashboard Admin</title>
    <style>
        .pagination {
            margin-top: 20px;
        }

            .pagination a, .pagination span {
                padding: 8px 12px;
                margin: 0 4px;
                text-decoration: none;
                color: #007bff;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .pagination span {
                background-color: #007bff;
                color: white;
            }

            .pagination a:hover {
                background-color: #f8f9fa;
            }
    </style>
</head>

<body>
    <!--Container -->
    <div class="mx-auto bg-grey-400">
        <!--Screen-->
        <div class="min-h-screen flex flex-col">
            <!--Header Section Starts Here-->
            <header class="bg-nav">
                <div class="flex justify-between">
                    <div class="p-1 mx-3 inline-flex items-center">
                        <i class="fas fa-bars pr-2 text-white" onclick="sidebarToggle()"></i>
                        <div class="main-logo">
                            <a href="/Home/"><img src="/images/logo-banner/YA-Bookstore-logo.webp" style="height:42px;" alt="logo"></a>
                        </div>
                    </div>
                    <div class="p-1 flex flex-row items-center">
                        <a href="#" onclick="profileToggle()" class="text-white p-2 no-underline hidden md:block lg:block">Admin</a>
                    </div>
                </div>
            </header>
            <!--/Header-->

            @RenderSection("Scripts", required: false)

            <div class="flex flex-1">
                <!--Sidebar-->
                <aside id="sidebar" class="bg-side-nav w-1/2 md:w-1/6 lg:w-1/6 border-r border-side-nav hidden md:block lg:block">

                    <ul class="list-reset flex flex-col" style="padding-left: 0;">
                        <li class=" w-full h-full py-3 px-2 border-b border-light-border bg-white">
                            <a href="/Home"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="fas fa-home float-left mx-2"></i>
                                Trang chủ
                                <span><i class="fas fa-angle-right float-right"></i></span>
                            </a>
                        </li>
                        <li class=" w-full h-full py-3 px-2 border-b border-light-border bg-white">
                            <a href="/Admin/RevenueReport"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="fas fa-home float-left mx-2"></i>
                                Thống kê doanh thu
                                <span><i class="fas fa-angle-right float-right"></i></span>
                            </a>
                        </li>
                        <li class="w-full h-full py-3 px-2 roll-list">
                            <!-- Sử dụng href trỏ đến id của collapse, thêm data-bs-toggle -->
                            <a href="#collapseEmployeeMenu"
                               data-bs-toggle="collapse"
                               aria-expanded="false"
                               aria-controls="collapseEmployeeMenu"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="far fa-file float-left mx-2"></i>
                                Quản lý nhân viên
                                <span><i class="fa fa-angle-down float-right"></i></span>
                            </a>
                            <!-- Thêm id và class collapse vào phần tử ul để Bootstrap 5 xử lý -->
                            <ul id="collapseEmployeeMenu" class="collapse list-reset -mx-2 bg-white-medium-dark">
                                <li class="border-t mt-2 border-300-border w-full h-full px-2 py-3">
                                    <a href="/LOAINHANVIENs"
                                       class="mx-4 font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                        Chức năng nhân viên
                                        <span><i class="fa fa-angle-right float-right"></i></span>
                                    </a>
                                </li>
                                <li class="border-t border-300-border w-full h-full px-2 py-3">
                                    <a href="/NHANVIENs"
                                       class="mx-4 font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                        Thông tin nhân viên
                                        <span><i class="fa fa-angle-right float-right"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="w-full h-full py-3 px-2 border-b border-light-border">
                            <a href="/nguoidungs"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="fas fa-users float-left mx-2"></i>

                                Quản lý người dùng
                                <span><i class="fa fa-angle-right float-right"></i></span>
                            </a>
                        </li>
                        <li class="w-full h-full py-3 px-2 border-b border-light-border">
                            <a href="/taikhoans"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="fas fa-folder-open float-left mx-2"></i>

                                Quản lý tài khoản
                                <span><i class="fa fa-angle-right float-right"></i></span>
                            </a>
                        </li>
                        <li class="w-full h-full py-3 px-2 border-b border-light-border">
                            <a href="/sanphams/"
                               class="font-sans font-hairline hover:font-normal text-base text-nav-item no-underline">
                                <i class="fas fa-grip-horizontal float-left mx-2"></i>
                                Quản lý sản phẩm
                                <span><i class="fa fa-angle-right float-right"></i></span>
                            </a>
                        </li>
                    </ul>

                </aside>
                <!--/Sidebar-->
                <!--Main-->
                <main class="bg-white-300 flex-1 p-3 overflow-hidden">

                    @RenderBody()
                </main>
                <!--/Main-->
            </div>

        </div>

    </div>
    <script src="~/js/admin-js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/admin-js/sub.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</body>


</html>