@* Views/Shared/PảtialView/_Banner.cshtml *@

<section id="billboard">
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <button class="prev slick-arrow">
                    <i class="fas fa-arrow-left" style="color: #000000a1;"></i>
                </button>
                <div class="main-slider pattern-overlay">
                    <!-- Banner 1 -->
                    <div class="slider-item">
                        <div class="banner-content">
                            <h2 class="banner-title">Sách Mới Ra Mắt</h2>
                            <p>Khám phá bộ sưu tập sách mới nhất với nhiều thể loại đa dạng cho mọi độc giả</p>
                            <div class="btn-wrap">
                                <a href="@Url.Action("Product", "Home")" class="btn btn-outline-accent btn-accent-arrow">
                                    Xem ngay<i class="fas fa-arrow-right icon" style="color: #0000005c;"></i>
                                </a>
                            </div>
                        </div><!--banner-content-->
                        <img src="~/images/logo-banner/main-banner1.jpg" alt="Sách mới" class="" loading="lazy">
                    </div><!--slider-item-->
                    <!-- Banner 2 -->
                    <div class="slider-item">
                        <div class="banner-content">
                            <h2 class="banner-title">Ưu Đãi Đặc Biệt</h2>
                            <p>Giảm giá lên đến 30% cho tất cả sách trong bộ sưu tập mùa hè này</p>
                            <div class="btn-wrap">
                                <a href="@Url.Action("Product", "Home", new { sort = "price-desc" })" class="btn btn-outline-accent btn-accent-arrow">
                                    Khám phá<i class="fas fa-arrow-right icon" style="color: #0000005c;"></i>
                                </a>
                            </div>
                        </div><!--banner-content-->
                        <img src="~/images/logo-banner/main-banner2.jpg" alt="Ưu đãi" class="" loading="lazy">
                    </div><!--slider-item-->
                </div><!--slider-->
                <button class="next slick-arrow">
                    <i class="fas fa-arrow-right" style="color: #000000a1;"></i>
                </button>
            </div>

        </div>
    </div>
</section>

