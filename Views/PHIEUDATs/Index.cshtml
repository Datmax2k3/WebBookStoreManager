@model IEnumerable<WebBookStoreManage.Models.PHIEUDAT>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayTaoPhieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChiGiaoHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongTien)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTaoPhieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiGiaoHang.IdDiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPhieuDat">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPhieuDat">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPhieuDat">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
