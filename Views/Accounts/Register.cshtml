
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<body class="h-screen font-sans login bg-cover">
    <div class="container mx-auto h-full flex flex-1 justify-center items-center">
        <div class="w-full max-w-lg">
            <div class="leading-loose">
                @using (Html.BeginForm("Register", "Accounts", FormMethod.Post, new { @class = "max-w-xl m-4 p-10 bg-white rounded shadow-xl" }))
                {
                    @Html.AntiForgeryToken()
                    <p class="text-gray-800 font-medium text-center text-lg font-bold">Đăng ký</p>

                    <div class="">
                        <label class="block text-sm text-gray-00" for="TenDangNhap">Username</label>
                        @Html.TextBox("TenDangNhap", ViewData["TenDangNhap"] as string ?? "", new
                        {
                            @class = "w-full px-5 py-1 text-gray-700 bg-gray-200 rounded",
                            placeholder = "User Name",
                            required = "required",
                            aria_label = "TenDangNhap"
                        })
                    </div>

                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="MatKhau">Password</label>
                        @Html.Password("MatKhau", null, new
                        {
                            @class = "w-full px-5 py-1 text-gray-700 bg-gray-200 rounded",
                            placeholder = "*******",
                            required = "required",
                            aria_label = "MatKhau"
                        })
                    </div>

                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="ConfirmMatKhau">Xác nhận mật khẩu</label>
                        @Html.Password("ConfirmMatKhau", null, new
                        {
                            @class = "w-full px-5 py-1 text-gray-700 bg-gray-200 rounded",
                            placeholder = "*******",
                            required = "required",
                            aria_label = "ConfirmMatKhau"
                        })
                    </div>

                    <!-- Thẻ span hiển thị lỗi nếu mật khẩu nhập lại không khớp -->
                    <span class="text-danger">
                        @if (TempData["RegisterError"] != null)
                        {
                            @TempData["RegisterError"]
                        }
                    </span>

                    <!-- Trường hidden gán cố định IdVaiTro = 3 -->
                    @Html.Hidden("IdVaiTro", 3)

                    <div class="mt-4 items-center justify-between">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit">Đăng ký</button>
                    </div>

                    <a class="inline-block right-0 align-baseline font-bold text-sm text-500 hover:text-blue-800" href="@Url.Action("Login", "Accounts")">
                        Đăng nhập
                    </a>
                }




            </div>
        </div>
    </div>
</body>

