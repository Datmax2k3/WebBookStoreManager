@model IEnumerable<WebBookStoreManage.Models.DANHMUC>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenDanhMuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThuTu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDanhMuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuTu)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDanhMuc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdDanhMuc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDanhMuc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
