<!--Partial Phân trang-->
@model WebBookStoreManage.ViewModels.ProductViewModel

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Product", new {
                        categoryId = Model.SelectedCategoryId,
                        danhmuc = ViewContext.HttpContext.Request.Query["danhmuc"],
                        danhmucchitiet = ViewContext.HttpContext.Request.Query["danhmucchitiet"],
                        sort = ViewContext.HttpContext.Request.Query["sort"],
                        keyword = ViewContext.HttpContext.Request.Query["keyword"],
                        page = 1
                })">Đầu</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Product", new {
                        categoryId = Model.SelectedCategoryId,
                        danhmuc = ViewContext.HttpContext.Request.Query["danhmuc"],
                        danhmucchitiet = ViewContext.HttpContext.Request.Query["danhmucchitiet"],
                        sort = ViewContext.HttpContext.Request.Query["sort"],
                        keyword = ViewContext.HttpContext.Request.Query["keyword"],
                        page = Model.CurrentPage - 1
                })">Trước</a>
            </li>
        }
        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Product", new {
                        danhmuc = ViewContext.HttpContext.Request.Query["danhmuc"],
                        danhmucchitiet = ViewContext.HttpContext.Request.Query["danhmucchitiet"],
                        sort = ViewContext.HttpContext.Request.Query["sort"],
                        keyword = ViewContext.HttpContext.Request.Query["keyword"],
                        page = i
                })">@i</a>
            </li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Product", new {
                        categoryId = Model.SelectedCategoryId,
                        danhmuc = ViewContext.HttpContext.Request.Query["danhmuc"],
                        danhmucchitiet = ViewContext.HttpContext.Request.Query["danhmucchitiet"],
                        sort = ViewContext.HttpContext.Request.Query["sort"],
                        keyword = ViewContext.HttpContext.Request.Query["keyword"],
                        page = Model.CurrentPage + 1
                })">Tiếp</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Product", new {
                        categoryId = Model.SelectedCategoryId,
                        danhmuc = ViewContext.HttpContext.Request.Query["danhmuc"],
                        danhmucchitiet = ViewContext.HttpContext.Request.Query["danhmucchitiet"],
                        sort = ViewContext.HttpContext.Request.Query["sort"],
                        keyword = ViewContext.HttpContext.Request.Query["keyword"],
                        page = Model.TotalPages
                })">Cuối</a>
            </li>
        }
    </ul>
</nav>
